pipeline {
    agent {
	    node {label 'master'}
    }
	
	#parameters {
		#choice (name: 'Action', choices: ['enable', 'disable', 'status'], description: 'Select particular option for rsync job')
	#}
	
	environment {
		ENV  =  "${params.environment}"
		#ACTION = "${params.Action}"
		WORKDIR_CMD = '/var/lib/jenkins/workspace/jenkinsbackup'
	}
	
	stages {
	    stage('checkout-repo') {
	       steps {
				checkout scm
		   }
		}
		
		stage('Backup-script') {
		    steps {
			     sh  """sudo su - jenkins -c 'cd ${WORKDIR_CMD};chmod 775 backup.sh;${WORKDIR_CMD}/backup.sh'"""
			}
	         }
	         
	}
	
